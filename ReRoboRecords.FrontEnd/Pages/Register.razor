@page "/register"
@inject IConfiguration Configuration
@inject HttpClient Http
@inject AuthService AuthService;
@inject NavigationManager NavigationManager
@using ReRoboRecords.FrontEnd.Services
@using ReRoboRecords.Shared
@using System.Net
@using System.Media
@using System.Text
@using System.Text.Json

<div class="d-flex justify-content-center align-items-center w-100">
    <div class="card shadow-lg w-100" style="max-width: 500px; min-height:120px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Create Account</h3>
            <EditForm Model="registerModel" OnSubmit="@Submit">
                <DataAnnotationsValidator/>
                @if (context.GetValidationMessages().Any())
                {
                    <div class="alert alert-danger d-flex flex-column justify-content-center">
                        <ul class="mb-0">
                            <!-- Display local validation errors -->
                            @foreach (var message in context.GetValidationMessages())
                            {
                                <li>@message</li>
                            }
                            <!-- Display server validation errors -->
                            @* @foreach (var error in serverErrors) *@
                            @* { *@
                            @*     <li>@error</li> *@
                            @* } *@
                        </ul>
                    </div>
                }

                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-envelope-fill" alt="Email" style="width: 20px;"></i>
                        </span>
                        <InputText @bind-Value="registerModel.Email" class="form-control" placeholder="Email Address"/> 
                    </div>
                </div>
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-person-fill" alt="User" style="width: 20px;"></i>
                        </span>
                        <InputText @bind-Value="registerModel.Username" class="form-control" placeholder="Username"/> 
                    </div>
                </div>
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-lock-fill" alt="Password" style="width: 20px;"></i>
                        </span>
                        <InputText @bind-Value="registerModel.Password" type="password" class="form-control" placeholder="Password"/>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-lock-fill" alt="Confirm Password" style="width: 20px;"></i>
                        </span>
                        <InputText @bind-Value="registerModel.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password"/>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Register</button>
            </EditForm>
            <div class="text-center mt-3">
                <small>Already have an account? <a href="/">Sign in</a></small>
            </div>
        </div>
    </div>
</div>

@code {
    RegisterViewModel registerModel = new();
    
    
    private async Task Submit()
    {
        var userId = await AuthService.SignUp(registerModel.Email, registerModel.Password);
        registerModel.Id = userId;
        Console.WriteLine(registerModel);
        var response = await Http.PostAsJsonAsync("http://localhost:5062/api/account/register", registerModel);
        if (response.StatusCode == HttpStatusCode.BadRequest) throw new Exception(await response.Content.ReadAsStringAsync());
        response.EnsureSuccessStatusCode();
        NavigationManager.NavigateTo("/");

    }

}