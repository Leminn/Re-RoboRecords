@{
    ViewData["Title"] = "Games";
    //Random number for testing purposes. Remove this in production
    Random rnd = new Random();
}

<div class="bg-body-tertiary p-3 border rounded">
    <div class="row gy-5 py-3">
        @for (int i = 0; i < 12; i++)
        {
            <div class="game-entry  col-sm-6 col-md-4 col-lg-3 animate__animated animate__fadeIn">
                <a href="#" class="text-decoration-none">
                    <div class="card border-3 p-2">
                        <img src="~/imgs/index/gfz@(rnd.Next(1,3)).png" class="img-thumbnail border-white">
                        <div class="card-body">
                            <h5 class="card-text text-center">Sonic Robo Blast 2 Vanilla</h5>
                            <p class="mb-0">@rnd.Next(10) runs</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<script src="~/js/games.js"></script>