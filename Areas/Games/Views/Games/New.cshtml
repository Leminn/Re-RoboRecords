@model NewGameViewModel
@{
    ViewData["Title"] = "New Game";
}

<div class="row justify-content-center h-100">
    <div class="col-md-8">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card bg-dark text-white">
                    <div class="card-header">
                        <h2 class="text-center my-auto">Create Game</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <!-- Game Title -->
                            <div class="mb-3">
                                <label asp-for="GameName" class="form-label">Game Title</label>
                                <input type="text" asp-for="GameName" class="form-control" id="gameTitle" placeholder="Enter game title">
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="GameAcronym" class="form-label">Game Acronym (Example: MRCE, SRB2, etc)</label>
                                <input type="text" asp-for="GameAcronym" class="form-control" id="gameAcronym" placeholder="Enter game acronym">
                            </div>

                            <!-- Game Description -->
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea class="form-control" asp-for="Description"  id="gameDescription" rows="3" placeholder="Describe the game..."></textarea>
                            </div>

                            <!-- Game Image -->
                            <div class="mb-3">
                                <label asp-for="GameImage" class="form-label">Game Image</label>
                                <input asp-for="GameImage" type="file" class="form-control" id="gameImage">
                                <small class="form-text text-muted">Upload an image for the game.</small>
                            </div>

                            <!-- Game Version -->
                            <div class="mb-3">
                                <label asp-for="GameVersion" class="form-label">Version</label>
                                <select class="form-select" asp-for="GameVersion" id="gameVersion">
                                    <option selected>Choose version...</option>
                                    <option value="2.2">2.2</option>
                                    <option value="2.1">2.1</option>
                                </select>
                            </div>

                            <!-- Release Date -->
                            <div class="mb-3">
                                <label asp-for="ReleaseDate" class="form-label">Release Date</label>
                                <input type="date" asp-for="ReleaseDate" class="form-control" id="releaseDate">
                            </div>

                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })


                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-lg btn-primary">Create Game</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>