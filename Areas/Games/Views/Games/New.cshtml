@model NewGameViewModel
@{
    ViewData["Title"] = "New Game";
}

<div class="row justify-content-center h-100">
    <div class="col-md-8">
        <div class="row justify-content-center">
               <div class="col-md-8">
                   <div class="card bg-dark text-white">
                       <div class="card-header">
                           <h2 class="text-center my-auto">Create Game</h2>
                       </div>
                       <div class="card-body">
                           <form>
                               <!-- Game Title -->
                               <div class="mb-3">
                                   <label asp-for="Name" class="form-label">Game Title</label>
                                   <input type="text" class="form-control" id="gameTitle" placeholder="Enter game title">
                               </div>
       
                               <!-- Game Description -->
                               <div class="mb-3">
                                   <label asp-for="Description" class="form-label">Description</label>
                                   <textarea class="form-control" id="gameDescription" rows="3" placeholder="Describe the game..."></textarea>
                               </div>
       
                               <!-- Game Image -->
                               <div class="mb-3">
                                   <label asp-for="GameImage" class="form-label">Game Image</label>
                                   <input type="file" class="form-control" id="gameImage">
                                   <small class="form-text text-muted">Upload an image for the game.</small>
                               </div>
       
                               <!-- Game Version -->
                               <div class="mb-3">
                                   <label asp-for="GameVersion" class="form-label">Version</label>
                                   <select class="form-select" id="gameVersion">
                                       <option selected>Choose version...</option>
                                       <option value="2.2">2.2</option>
                                       <option value="2.1">2.1</option>
                                   </select>
                               </div>
       
                               <!-- Release Date -->
                               <div class="mb-3">
                                   <label asp-for="ReleaseDate" class="form-label">Release Date</label>
                                   <input type="date" class="form-control" id="releaseDate">
                               </div>
       
                               <!-- Submit Button -->
                               <div class="text-center">
                                   <button type="submit" class="btn btn-primary">Create Game</button>
                               </div>
                           </form>
                       </div>
                   </div>
               </div>
           </div>
    </div>
</div>

 