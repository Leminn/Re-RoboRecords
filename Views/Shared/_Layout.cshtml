<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReRoboRecords</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-dark">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-3 mb-3">
            <div class="container border-bottom pb-2 d-flex justify-content-center">
                <a class="navbar-brand fs-3" asp-controller="Home" asp-action="Index">
                    <img src="/imgs/icons/time-emblem.png" alt="Logo" class="d-inline-block align-text-top me-1">
                    RoboRecords
                </a>
                <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapsibleNavId" aria-controls="collapsibleNavId" aria-expanded="false"
                    aria-label="Toggle navigation"></button>
                <div class="collapse  navbar-collapse" id="collapsibleNavId">
                    <form class="d-flex my-2 my-lg-0">
                        <input class="form-control" type="text" placeholder="Games/Runs/Users">
                    </form>
                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0">

                        <partial name="_LoginPartial" />
                    </ul>

                </div>
            </div>
        </nav>

    </header>
    <div class="content container h-100">
        @RenderBody()

    </div>

    <footer class="border-top container mt-auto py-3 bg-dark text-white footer">

        &copy; 2023 - ReRoboRecords - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
