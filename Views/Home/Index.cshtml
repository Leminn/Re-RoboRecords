@{
    ViewData["Title"] = "Home Page";
}



@if (!User.Identity.IsAuthenticated)
{
    <div class="row flex-row-reverse align-items-center gx-5 my-auto" style="height: 1000px;">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <div id="carouselExampleSlidesOnly" class="carousel slide carousel-fade shadow-lg" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <!-- Carousel items -->
                    <div class="carousel-item active" data-bs-interval="2000">
                        <img src="imgs/index-carousel/1.gif" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item" data-bs-interval="2000">
                        <img src="imgs/index-carousel/2.gif" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item" data-bs-interval="2000">
                        <img src="imgs/index-carousel/3.gif" class="d-block w-100" alt="...">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 text-center text-lg-start">
            <h1 class="display-2 fw-bold lh-1 mb-3">RoboRecords</h1>
            <p class="lead text-light">Welcome to RoboRecords, your premier destination for SRB2 speedrunning. Here you can upload your .lmp files, compare times, and join a community of dedicated speedrunners.</p>
            <div class="pt-3">
                <div class="row">
                    <div class="col-8" >
                        <a class="btn btn-lg btn-primary me-2 w-100" asp-area="Account" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Register</a>

                    </div>
                    <div class="col-4" >
                        <a class="btn btn-lg btn-outline-light border-light w-100" asp-area="Account" asp-controller="Account" asp-action="Login">Login</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h1 class="display-5 text-center fw-bold">Welcome back, @User.Identity.Name!</h1>

    // TODO: Add quick links to user's profile, upload, etc along with info and tidbits about recent run achievements.
}